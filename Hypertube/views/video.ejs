<% include partial/header %>

<script src="/asset/js/coment_utility.js" type="text/javascript"></script>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
	<div class="row">
		<div class="well well-sm">
			<%= movie.title %>
		</div>
	</div>
	<div class="row">
		<div id="frame" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
			<video id="my-video" controls preload="none" >
				<source src="<%= src %>" type="video/mp4"/>
				<source src="<%= src %>" type="video/webM"/>
				<% if (typeof srcSrtFr !== 'undefined') { %>
				<track label="fr" kind="subtitles" srclang="fr" src="<%= srcSrtFr %>">
				<% }
				if (typeof srcSrtEn !== 'undefined') { %>
				<track label="en" kind="subtitles" srclang="en" src="<%= srcSrtEn %>">
				<% } %>
				<!--<source src="<%= src %>" type="video/ogg"/> -->
				<!-- fallback -->
				<p><%= translate.VidNotSupport %></p>
			</video>
		</div>
	</div>
	<br>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
	<div class="row">
		<div class="well well-sm">
			<label class="col-lg-12 col-xs-12 col-sm-12 col-md-12"><%= translate.syno %></label>
			<%= movie.synopsis %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
			<div class="well well-sm">
				<label class="col-lg-12 col-xs-12 col-sm-12 col-md-12"><%= translate.rate %></label>
				<%= movie.rate %>
			</div>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
			<div class="well well-sm">
				<label class="col-lg-6 col-xs-6 col-sm-6 col-md-6"><%= translate.lang %></label>
				<%= movie.lang %>
			</div>
			<div class="well well-sm">
				<label class="col-lg-6 col-xs-6 col-sm-6 col-md-6"><%= translate.year %></label>
				<%= movie.year %>
			</div>
		</div>
	</div>
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center jumbotron">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<label class="col-lg-3 col-xs-3 col-sm-3 col-md-3"><%= translate.comment %></label>
			<input id="inComment" class="col-lg-7 col-xs-7 col-sm-7 col-md-7 text-center" type="text" name="comment" onkeypress="if(event.keyCode == 13 && this.value != ''){ postComment(); this.value='';}" value="">
			<button id="butComment" class="col-lg-2 col-xs-2 col-sm-2 col-md-2 btn btn-default btn-sm"><%= translate.submit %></button>
		</div>
		<div id="comment" class="row">
		</div>
	</div>
</div>

<!-- <script src="http://vjs.zencdn.net/5.8.8/video.js"></script> -->
<script src="/asset/js/commentaire.js" type="text/javascript"></script>

<% include partial/footer %>
