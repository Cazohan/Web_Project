<% include partial/header %>

    <br/><br/><br/><br/>
    <div class="row">
        <h1 class="text-center" id="htitre">Connexion :</h1>
    </div>
    <br/><br/><br/><br/><br/>
    <div class="jumbotron jumlog col-xs-4 col-xs-offset-4 col-md-4 col-md-offset-4">
            <form id="formu" action="/login" method="post">
                <div class="row">
                    <div class="col-xs-offset-1 col-xs-10 col-md-10">
                        <label>Login :</label>
                        <input class="form-control text-center" type="text" name="login">
                    </div>
                </div>
                <br/><br/>
                <div class="row">
                    <div class="col-xs-offset-1 col-xs-10 col-md-10">
                        <label>Mot de passe :</label>
                        <input class="form-control text-center" type="password" name="pwd">
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="text-center">
                        <input class="btn" id="test" type="submit" name="submit" value="Connexion">
                    </div>
                </div>
            </form>
    </div>
    <div class="row">
    </div>
    <div class="row">
        <div class="col-md-4 text-center col-md-offset-4">
            <a class="text-center" href="/register"><p class="deco_log">T'oh ! Fait ton compte</p></a>
            <br/>
            <div class="col-md-4 text-center col-md-offset-4">
                <a href="#" id="reset" class="deco_log"><p>Mot de passe oublié?</p></a>
            </div>
        </div>
    </div>


<script type="text/javascript">
    var reset = document.getElementById('reset');

    reset.addEventListener('click', function() {
        if (reset.innerText == 'Mot de passe oublié?') {
            var form = document.getElementById('formu'),
                htitre = document.getElementById('htitre'),
                sub = document.createElement('input'),
                jump = document.createElement('br'),
                mail = document.createElement('input'),
                lab = document.createElement('label');
                
            form.innerText = '';
            reset.innerText = 'Ouh Pinaise ! le pass ?' ;
            reset.setAttribute('class', 'deco_log');
            mail.setAttribute('class', 'form-control text-center');
            mail.setAttribute('type', 'mail');
            mail.setAttribute('name', 'mail');
            sub.setAttribute('class', 'btn btn-primary col-md-6 col-md-offset-3');
            sub.setAttribute('type', 'submit');
            sub.setAttribute('name', 'submit');
            sub.setAttribute('value', 'Reset');
            lab.innerHTML = 'Mail : ';
            htitre.innerHTML = 'Reset Pass : ';
            form.appendChild(lab);
            form.appendChild(mail);
            form.appendChild(jump);
            form.appendChild(sub);
        } else {
            window.location.href = "http://localhost:3000";
        }
    });
</script>

